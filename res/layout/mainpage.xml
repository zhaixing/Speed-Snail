<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

    </LinearLayout>

    <ImageButton
        android:id="@+id/mainpage_about"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:scaleType="fitStart"
        android:background="@drawable/info_btn" />

    <ImageButton
        android:id="@+id/mainpage_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainpage_help"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_marginBottom="26dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/exit" />

    <ImageButton
        android:id="@+id/mainpage_settings"
        android:layout_width="50px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainpage_exit"
        android:layout_marginRight="47dp"
        android:layout_toLeftOf="@+id/mainpage_exit"
        android:layout_weight="1.16"
        android:background="#00000000"
        android:scaleType="matrix"
        android:src="@drawable/settings_btn" />

    <ImageButton
        android:id="@+id/mainpage_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainpage_help"
        android:layout_alignLeft="@+id/linearLayout1"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/start" />

    <ImageButton
        android:id="@+id/mainpage_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainpage_about"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/mainpage_start"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/help_btn" />

</RelativeLayout>